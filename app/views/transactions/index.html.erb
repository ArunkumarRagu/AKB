<div class="d-inline">
  <h1>Your Transactions</h1>
  <%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-success' %>
</div>
<% if @transactions.present? %>
  <div class="trans-table-container">
    <div class="form-check form-switch"  id='group'>
      <input class="form-check-input" type="checkbox" role="switch" id="group_transactions" data-behavior="group_transaction">
      <label class="form-check-label" for="group_transactions">Group by Account</label>
    </div>
    <div>
      <%= render partial: 'ungrouped_transactions', locals: {transactions: @transactions} %>
      <%= render partial: 'grouped_transactions', locals: {transactions: @transactions} %>
    </div>
  </div>
<% else %>
  <h6>No Transactions Found</h6>
<% end %>
