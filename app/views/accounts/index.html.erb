<h1>Accounts</h1>
<%= link_to 'Create New Account', new_account_path, class: 'btn btn-primary mb-3' %>
<div class="accounts-table-wrapper">
  <table id="accounts_table" class="table" data-behavior="basic_tables">
    <thead>
      <tr>
        <th>S/No</th>
        <th>Name</th>
        <th>Description</th>
        <th>Branch</th>
        <th>Balance</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= account.id %></td>
          <td><%= account.name %></td>
          <td><%= account.description %></td>
          <td><%= account.branch %></td>
          <td><%= account.balance %></td>
          <td>
            <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-outline-primary' %>
            <%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
